<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <base href="<%= basePath %>/" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="bg-orbit"></div>
    <div class="bg-grid"></div>
    <main class="layout container-fluid admin-layout py-4">
      <div class="card shadow-sm" style="max-width: 420px; margin: 8vh auto;">
        <div class="card-header">
          <h1 class="h5 mb-0">Accesso</h1>
        </div>
        <div class="card-body">
          <form id="loginForm" class="vstack gap-3">
            <label class="field">
              <span>Username</span>
              <input class="form-control" name="username" type="text" autocomplete="username" required />
            </label>
            <label class="field">
              <span>Password</span>
              <input class="form-control" name="password" type="password" autocomplete="current-password" required />
            </label>
            <button class="btn btn-primary" type="submit">Entra</button>
            <div class="text-danger small" id="loginError"></div>
          </form>
        </div>
      </div>
    </main>
    <script>
      const form = document.getElementById("loginForm");
      const error = document.getElementById("loginError");
      form.addEventListener("submit", async (event) => {
        event.preventDefault();
        error.textContent = "";
        const body = {
          username: form.username.value.trim(),
          password: form.password.value,
        };
        const res = await fetch("/auth/login", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(body),
        });
        if (!res.ok) {
          const info = await res.json().catch(() => ({}));
          error.textContent = info.error || "Login fallito";
          return;
        }
        window.location.href = "/home";
      });
    </script>
  </body>
</html>
