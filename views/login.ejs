<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <base href="<%= basePath %>/" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="bg-orbit"></div>
    <div class="bg-grid"></div>
    <main class="layout container-fluid admin-layout py-4">
      <div class="card shadow-sm" style="max-width: 420px; margin: 8vh auto;">
        <div class="card-header">
          <h1 class="h5 mb-0">Accesso</h1>
        </div>
        <div class="card-body">
          <form id="loginForm" class="vstack gap-3">
            <label class="field">
              <span>Username</span>
              <input class="form-control" name="username" type="text" autocomplete="username" required />
            </label>
            <label class="field">
              <span>Password</span>
              <input class="form-control" name="password" type="password" autocomplete="current-password" required />
            </label>
            <label class="field is-hidden" id="otpField">
              <span>Codice 2FA</span>
              <input class="form-control" name="otp" type="text" inputmode="numeric" autocomplete="one-time-code" />
            </label>
            <button class="btn btn-primary" type="submit">Entra</button>
            <div class="text-danger small" id="loginError"></div>
          </form>
        </div>
      </div>
    </main>
    <script defer src="login.js?v=1"></script>
  </body>
</html>
