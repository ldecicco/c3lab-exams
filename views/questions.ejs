<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <% if (csrfToken) { %><meta name="csrf-token" content="<%= csrfToken %>"><% } %>
    <base href="<%= basePath %>/" />
    <title>Domande - Banco Domande</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { active: 'questions' }) %>
    <div class="bg-orbit"></div>
    <div class="bg-grid"></div>

    <!-- <header class="hero py-4">
      <div class="brand container">
        <div class="badge">FA</div>
        <div>
          <p class="overline mb-1">C3LAB • Fondamenti di Automatica</p>
          <h1 class="h2 mb-0">Admin Banco Domande</h1>
          <p class="subtitle">Gestisci corsi, argomenti e domande riutilizzabili.</p>
        </div>
      </div>
    </header> -->

    <div class="empty-state is-hidden" id="courseEmptyState">
      <div class="empty-state-content">
        <strong>Seleziona un corso per iniziare</strong>
        <a class="btn btn-primary" href="home">
          <i class="fa-solid fa-graduation-cap"></i>
          Vai ai corsi
        </a>
      </div>
    </div>

    <main class="layout container-fluid admin-layout py-4 questions-page" id="mainLayout">
      <select id="adminCoursePicker" class="form-select is-hidden" aria-hidden="true"></select>
      <div class="builder-topbar grading-topbar admin-topbar questions-topbar">
        <div class="builder-topbar-left">
          <button class="btn btn-outline-secondary" id="adminToolbarNew" type="button">
            <i class="fa-solid fa-plus"></i>
            Nuova domanda
          </button>
          <span class="chip is-hidden" id="adminEditBadgeTop">In modifica</span>
        </div>
        <div class="builder-topbar-right">
          <span class="chip" id="adminSaveState">Non salvato</span>
          <button class="btn btn-outline-secondary" id="adminToolbarBank" type="button">
            <i class="fa-solid fa-layer-group"></i>
            Lista domande
          </button>
          <button class="btn btn-outline-secondary" id="adminToolbarDuplicate" type="button">
            <i class="fa-regular fa-clone"></i>
            Duplica
          </button>
          <button class="btn btn-outline-primary" id="adminToolbarSave" type="button">
            <i class="fa-regular fa-floppy-disk"></i>
            Salva domanda
          </button>
          <button class="btn btn-outline-secondary" id="adminToolbarReset" type="button">
            <i class="fa-solid fa-rotate-left"></i>
            Reset
          </button>
        </div>
      </div>
      <div class="empty-state is-hidden" id="adminCourseEmpty">
        <div class="empty-state-content">
          <strong>Seleziona corso</strong>
          <div class="text-secondary">Scegli un corso per iniziare a creare le domande.</div>
        </div>
      </div>

      <div class="admin-question-layout" id="adminEditorWrap">
          <div class="admin-question-block">
            <!-- <div class="admin-question-header">
              <h3 class="h6 mb-0">Nuova domanda</h3>
              <span class="chip is-hidden" id="adminEditBadge">In modifica</span>
            </div> -->
            <!-- <div class="mini-steps">
              <div class="mini-step is-active">Testo</div>
              <span class="mini-step-sep"></span>
              <div class="mini-step">Risposte</div>
              <span class="mini-step-sep"></span>
              <div class="mini-step">Immagine</div>
              <span class="mini-step-sep"></span>
              <div class="mini-step">Argomenti</div>
            </div> -->
            <div class="field-inline">
              <span class="field-label">Tipo domanda</span>
              <div class="radio-group" id="adminQuestionType">
                <label class="radio-pill">
                  <input type="radio" name="adminQuestionTypeOption" value="singola" checked />
                  <span>Singola</span>
                </label>
                <label class="radio-pill">
                  <input type="radio" name="adminQuestionTypeOption" value="multipla" />
                  <span>Multipla</span>
                </label>
              </div>
            </div>
            <details class="admin-accordion" open>
              <summary>
                <span>Argomenti</span>
                <i class="fa-solid fa-chevron-down"></i>
              </summary>
              <div class="admin-accordion-body">
                <div id="adminQuestionTopics" class="topic-pills"></div>
              </div>
            </details>
            <details class="admin-accordion" id="adminImageAccordion">
              <summary>
                <span class="accordion-title">Immagine</span>
                <label class="accordion-toggle" title="Attiva layout con immagine">
                  <input class="form-check-input" type="checkbox" id="adminQuestionImageLayout" />
                </label>
                <i class="fa-solid fa-chevron-down"></i>
              </summary>
              <div class="admin-accordion-body">
                <label class="field">
                  <span>Immagine</span>
                  <div class="inline-actions">
                    <button class="btn btn-outline-secondary" id="adminPickImage" type="button">Seleziona</button>
                  </div>
                </label>
                <div class="layout-fields is-hidden" id="adminQuestionLayoutFields">
                  <div class="layout-controls">
                    <div class="field">
                      <div class="field-header">
                        <span>Posizione immagine</span>
                      </div>
                      <div class="radio-group" id="adminImageLayoutMode">
                        <label class="radio-pill is-selected">
                          <input type="radio" name="adminImageLayoutMode" value="side" checked />
                          <span>Affiancata</span>
                        </label>
                        <label class="radio-pill">
                          <input type="radio" name="adminImageLayoutMode" value="below" />
                          <span>Sotto domanda</span>
                        </label>
                      </div>
                    </div>
                    <div class="field" id="adminImageSplitFields">
                      <div class="field-header">
                        <span>Layout colonne</span>
                        <span class="field-hint" id="adminImageSplitLabel">Immagine 50% • Risposte 50%</span>
                      </div>
                      <div class="layout-preview" id="adminImageSplitPreview">
                        <div class="layout-preview-image" style="width: 50%"></div>
                        <div class="layout-preview-text" style="width: 50%"></div>
                      </div>
                      <input id="adminImageSplit" class="form-range" type="range" min="10" max="90" value="50" />
                      <div class="preset-row" id="adminImageSplitPresets">
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-split="30">30/70</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-split="40">40/60</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-split="50">50/50</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-split="60">60/40</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-split="70">70/30</button>
                      </div>
                    </div>
                    <div class="field">
                      <div class="field-header">
                        <span>Dimensione immagine</span>
                        <span class="field-hint" id="adminImageScaleLabel">96% della colonna</span>
                      </div>
                      <input id="adminImageScaleRange" class="form-range" type="range" min="60" max="100" value="96" />
                      <div class="preset-row" id="adminImageScalePresets">
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-scale="80">80%</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-scale="90">90%</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-scale="96">96%</button>
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-scale="100">100%</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </details>
            <div class="section-divider"></div>
            <div class="section-header">
              <div class="section-label">Testo domanda</div>
              <button class="btn btn-outline-secondary btn-sm" type="button" id="adminQuestionNoteBtn">
                Note
              </button>
            </div>
            <div class="shortcut-toolbar">
              <span class="shortcut-label">Scorciatoie</span>
              <div class="chip-row" id="adminShortcutBar"></div>
              <% if (user && user.role === 'admin') { %>
                <button class="btn btn-outline-secondary btn-sm" id="adminShortcutAdd" type="button">
                  <i class="fa-solid fa-plus"></i>
                </button>
              <% } %>
            </div>
            <div class="text-secondary small is-hidden" id="adminShortcutEmpty">
              Nessuna scorciatoia disponibile per questo corso.
            </div>
            <label class="field">
              <textarea id="adminQuestionText" class="form-control" rows="4"></textarea>
            </label>
            <div class="text-danger small is-hidden" id="adminQuestionError">
              Errore LaTeX: controlla la sintassi della formula.
            </div>
            <div class="section-divider"></div>
            <div class="section-label">Risposte</div>
            <div class="answers-builder">
              <!-- <div class="answers-title">Risposte</div> -->
              <div class="text-danger small is-hidden" id="adminAnswersError">
                Errore LaTeX in una risposta.
              </div>
              <div id="adminAnswers"></div>
              <button class="btn btn-outline-primary btn-sm" id="adminAddAnswer" type="button">Aggiungi risposta</button>
            </div>
            <div class="admin-question-status" id="adminQuestionStatus" role="status" aria-live="polite"></div>
          </div>
          <aside class="admin-preview-card">
            <div class="preview-card-header">
              <div>
                <h3 class="h6 mb-1">Anteprima domanda</h3>
                <div class="text-secondary small" id="adminPreviewMeta">Compila i campi per vedere l'anteprima.</div>
              </div>
              <div class="preview-toolbar">
                <button class="btn btn-outline-secondary btn-sm" id="adminPreviewRefresh" type="button">
                  <i class="fa-solid fa-rotate"></i>
                  Aggiorna
                </button>
              </div>
            </div>
            <div id="adminPreviewQuestion" class="latex-preview-block"></div>
            <div class="preview-image is-hidden" id="adminPreviewImageWrap">
              <img id="adminPreviewImage" alt="" />
              <div class="preview-image-meta" id="adminPreviewImageMeta"></div>
            </div>
            <div id="adminPreviewAnswers" class="preview-answer-list"></div>
          </aside>
      </div>
    </main>

    <!-- <footer class="footer">
      <p>Gestione catalogo domande, corsi e argomenti.</p>
    </footer> -->

    <div class="modal-backdrop is-hidden" id="imagePickerBackdrop"></div>
    <div class="modal-panel is-hidden" id="imagePickerModal" role="dialog" aria-modal="true" aria-labelledby="imagePickerTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="imagePickerTitle">Seleziona immagine</h3>
        <div class="modal-header-actions">
          <button class="btn btn-outline-primary btn-sm" type="button" id="imagePickerNew">
            <i class="fa-solid fa-plus"></i>
            Nuova immagine
          </button>
          <button class="btn btn-outline-secondary btn-sm" type="button" id="imagePickerClose">Chiudi</button>
        </div>
      </div>
      <div class="modal-body">
        <div class="text-secondary small" id="imagePickerStatus"></div>
        <div id="imagePickerList" class="image-bank modal-bank"></div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="imageUploadBackdrop"></div>
    <div class="modal-panel is-hidden" id="imageUploadModal" role="dialog" aria-modal="true" aria-labelledby="imageUploadTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="imageUploadTitle">Nuova immagine</h3>
        <button class="btn btn-outline-secondary btn-icon btn-sm" type="button" id="imageUploadClose" aria-label="Chiudi">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="grid">
          <label class="field">
            <span>Nome immagine</span>
            <input id="imageUploadName" class="form-control" type="text" placeholder="Sistema in anello chiuso" />
          </label>
          <label class="field">
            <span>Descrizione (opzionale)</span>
            <input id="imageUploadDescription" class="form-control" type="text" placeholder="schema di controllo" />
          </label>
          <label class="field">
            <span>File</span>
            <input id="imageUploadFile" class="form-control" type="file" />
          </label>
          <label class="field">
            <span>Sorgente (opzionale)</span>
            <input id="imageUploadSourceFile" class="form-control" type="file" />
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" id="imageUploadSave" type="button">Carica immagine</button>
        </div>
        <div class="text-secondary small" id="imageUploadStatus"></div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="imagePreviewBackdrop"></div>
    <div class="modal-panel is-hidden" id="imagePreviewModal" role="dialog" aria-modal="true" aria-labelledby="imagePreviewTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="imagePreviewTitle">Anteprima immagine</h3>
        <button class="btn btn-outline-secondary btn-sm" type="button" id="imagePreviewClose">Chiudi</button>
      </div>
      <div class="modal-body">
        <div class="image-preview">
          <img id="imagePreviewImg" alt="" />
        </div>
        <div class="image-preview-meta" id="imagePreviewMeta"></div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="bankModalBackdrop"></div>
    <div class="modal-panel is-hidden" id="bankModal" role="dialog" aria-modal="true" aria-labelledby="bankModalTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="bankModalTitle">Banco domande</h3>
        <button class="btn btn-outline-secondary btn-icon btn-sm" type="button" id="bankModalClose" aria-label="Chiudi">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="grid">
          <label class="field">
            <span>Argomento</span>
            <select id="bankTopic" class="form-select"></select>
          </label>
          <label class="field">
            <span>Ricerca</span>
            <input id="bankSearch" class="form-control" type="text" placeholder="parola chiave" />
          </label>
          <label class="field">
            <span>Utilizzo</span>
            <select id="bankUsage" class="form-select">
              <option value="all">Tutte</option>
              <option value="used">Usate in esami</option>
              <option value="unused">Non usate</option>
            </select>
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" id="refreshBank">Aggiorna elenco</button>
        </div>
        <div id="bankList" class="list-panel"></div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="questionNoteBackdrop"></div>
    <div class="modal-panel is-hidden" id="questionNoteModal" role="dialog" aria-modal="true" aria-labelledby="questionNoteTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="questionNoteTitle">Note domanda</h3>
        <button class="btn btn-outline-secondary btn-icon btn-sm" type="button" id="questionNoteClose" aria-label="Chiudi">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="modal-body">
        <label class="field">
          <span>Nota (LaTeX)</span>
          <textarea id="questionNoteText" class="form-control" rows="4"></textarea>
        </label>
        <div class="latex-preview-block" id="questionNotePreview"></div>
        <div class="modal-footer">
          <button class="btn btn-outline-danger" type="button" id="questionNoteDelete">Elimina nota</button>
          <button class="btn btn-outline-secondary" type="button" id="questionNoteCancel">Annulla</button>
          <button class="btn btn-primary" type="button" id="questionNoteSave">Salva</button>
        </div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="answerNoteBackdrop"></div>
    <div class="modal-panel is-hidden" id="answerNoteModal" role="dialog" aria-modal="true" aria-labelledby="answerNoteTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="answerNoteTitle">Note risposta</h3>
        <button class="btn btn-outline-secondary btn-icon btn-sm" type="button" id="answerNoteClose" aria-label="Chiudi">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="modal-body">
        <label class="field">
          <span>Nota (LaTeX)</span>
          <textarea id="answerNoteText" class="form-control" rows="4"></textarea>
        </label>
        <div class="latex-preview-block" id="answerNotePreview"></div>
        <div class="modal-footer">
          <button class="btn btn-outline-danger" type="button" id="answerNoteDelete">Elimina nota</button>
          <button class="btn btn-outline-secondary" type="button" id="answerNoteCancel">Annulla</button>
          <button class="btn btn-primary" type="button" id="answerNoteSave">Salva</button>
        </div>
      </div>
    </div>

    <% if (user && user.role === 'admin') { %>
      <div class="modal-backdrop is-hidden" id="shortcutModalBackdrop"></div>
      <div class="modal-panel is-hidden" id="shortcutModal" role="dialog" aria-modal="true" aria-labelledby="shortcutModalTitle">
        <div class="modal-header">
          <h3 class="h5 mb-0" id="shortcutModalTitle">Nuova scorciatoia</h3>
          <button class="btn btn-outline-secondary btn-icon btn-sm" type="button" id="shortcutModalClose" aria-label="Chiudi">
            <i class="fa-solid fa-xmark"></i>
          </button>
        </div>
        <div class="modal-body">
          <div class="grid">
            <label class="field">
              <span>Descrizione breve</span>
              <input id="shortcutModalLabel" class="form-control" type="text" placeholder="Funzione di trasferimento" />
            </label>
            <label class="field">
              <span>Testo da inserire</span>
              <input id="shortcutModalSnippet" class="form-control" type="text" placeholder="$G_0(s)=\\frac{}{}$" />
            </label>
          </div>
          <div class="actions">
            <button class="btn btn-outline-primary" id="shortcutModalSave" type="button">Salva scorciatoia</button>
          </div>
          <div class="text-secondary small" id="shortcutModalStatus"></div>
        </div>
      </div>
    <% } %>

    <div class="toast-notify" id="adminToast" role="status" aria-live="polite"></div>

    <div class="keyboard-shortcuts-hint is-hidden" id="keyboardShortcutsHint">
      <div class="keyboard-shortcuts-title">Scorciatoie tastiera</div>
      <div id="keyboardShortcutsList"></div>
    </div>

    <script
      defer
      src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/katex.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/katex@0.16.10/dist/contrib/auto-render.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/latex.js/dist/latex.min.js"
    ></script>
    <script defer src="question-cards.js?v=1"></script>
    <script defer src="utils/ui.js?v=1"></script>
    <script defer src="admin.js?v=5"></script>
  </body>
</html>
