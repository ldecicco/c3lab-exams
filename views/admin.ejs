    <main class="layout container-fluid admin-layout py-4">
      <div class="builder-topbar grading-topbar admin-topbar">
        <div class="builder-topbar-left">
          <span class="builder-current-title">Amministrazione</span>
        </div>
        <div class="builder-topbar-right">
          <button class="btn btn-outline-secondary" type="button" id="toggleUsers">
            <i class="fa-solid fa-users"></i>
            Utenti
          </button>
          <button class="btn btn-outline-secondary" type="button" id="toggleCourses">
            <i class="fa-solid fa-school"></i>
            Corsi
          </button>
          <button class="btn btn-outline-secondary" type="button" id="toggleTopics">
            <i class="fa-solid fa-list"></i>
            Argomenti
          </button>
          <button class="btn btn-outline-secondary" type="button" id="toggleShortcuts">
            <i class="fa-solid fa-bolt"></i>
            Scorciatoie
          </button>
          <button class="btn btn-outline-secondary" type="button" id="toggleImages">
            <i class="fa-regular fa-image"></i>
            Immagini
          </button>
        </div>
      </div>

      <section class="card shadow-sm is-hidden" id="adminCoursesSection">
        <div class="card-header">
          <h2 class="h5 mb-1">Corsi</h2>
          <p class="text-secondary mb-0">Crea o elimina corsi disponibili.</p>
        </div>
        <div class="grid">
          <label class="field">
            <span>Nuovo corso</span>
            <div class="inline-actions">
              <input id="adminCourseNew" class="form-control" type="text" placeholder="Fondamenti di Automatica" />
              <button id="adminAddCourse" class="btn btn-outline-primary" type="button">Crea</button>
              <button id="adminUpdateCourse" class="btn btn-outline-primary is-hidden" type="button">Aggiorna</button>
              <button id="adminCancelCourse" class="btn btn-outline-secondary is-hidden" type="button">Annulla</button>
            </div>
          </label>
        </div>
        <div class="text-secondary small" id="adminCourseStatus"></div>
        <div id="adminCourseList" class="list-panel"></div>
      </section>

      <section class="card shadow-sm is-hidden" id="adminTopicsSection">
        <div class="card-header">
          <h2 class="h5 mb-1">Argomenti</h2>
          <p class="text-secondary mb-0">Gestisci gli argomenti per corso.</p>
        </div>
        <div class="grid">
          <label class="field">
            <span>Corso</span>
            <select id="adminTopicCourse" class="form-select"></select>
          </label>
          <label class="field">
            <span>Nuovo argomento</span>
            <div class="inline-actions">
              <input id="adminTopicNew" class="form-control" type="text" placeholder="stabilita" />
              <button id="adminAddTopic" class="btn btn-outline-primary" type="button">Crea</button>
              <button id="adminUpdateTopic" class="btn btn-outline-primary is-hidden" type="button">Aggiorna</button>
              <button id="adminCancelTopic" class="btn btn-outline-secondary is-hidden" type="button">Annulla</button>
            </div>
          </label>
        </div>
        <div class="text-secondary small" id="adminTopicStatus"></div>
        <div id="adminTopicList" class="list-panel"></div>
      </section>

      <section class="card shadow-sm is-hidden" id="adminShortcutsSection">
        <div class="card-header">
          <h2 class="h5 mb-1">Scorciatoie</h2>
          <p class="text-secondary mb-0">Gestisci le scorciatoie LaTeX per corso.</p>
        </div>
        <div class="grid">
          <label class="field">
            <span>Corso</span>
            <select id="adminShortcutCourse" class="form-select"></select>
          </label>
          <label class="field">
            <span>Descrizione breve</span>
            <input id="adminShortcutLabel" class="form-control" type="text" placeholder="Funzione di trasferimento" />
          </label>
          <label class="field">
            <span>Testo da inserire</span>
            <input id="adminShortcutSnippet" class="form-control" type="text" placeholder="$G_0(s)=\\frac{}{}$" />
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" id="adminCreateShortcut" type="button">Crea scorciatoia</button>
          <button class="btn btn-outline-primary is-hidden" id="adminUpdateShortcut" type="button">
            Aggiorna scorciatoia
          </button>
          <button class="btn btn-outline-secondary is-hidden" id="adminCancelShortcut" type="button">
            Annulla
          </button>
          <div class="text-secondary small" id="adminShortcutStatus"></div>
        </div>
        <div id="adminShortcutList" class="list-panel"></div>
      </section>

      <section class="card shadow-sm is-hidden" id="adminImagesSection">
        <div class="card-header">
          <h2 class="h5 mb-1">Banco immagini</h2>
          <p class="text-secondary mb-0">Carica e riusa immagini per corso.</p>
        </div>
        <div class="grid">
          <label class="field">
            <span>Corso</span>
            <select id="adminImageCourse" class="form-select"></select>
          </label>
          <label class="field">
            <span>Nome immagine</span>
            <input id="adminImageName" class="form-control" type="text" placeholder="Sistema in anello chiuso" />
          </label>
          <label class="field">
            <span>Descrizione (opzionale)</span>
            <input id="adminImageDescription" class="form-control" type="text" placeholder="schema di controllo" />
          </label>
          <label class="field">
            <span>File</span>
            <input id="adminImageFile" class="form-control" type="file" />
          </label>
          <label class="field">
            <span>Sorgente (opzionale)</span>
            <input id="adminImageSourceFile" class="form-control" type="file" />
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" id="adminUploadImage" type="button">Carica immagine</button>
        </div>
        <div class="text-secondary small mt-2" id="adminImageStatus"></div>
        <div id="adminImageList" class="image-bank"></div>
      </section>

      <section class="card shadow-sm is-hidden" id="adminUsersSection">
        <div class="card-header">
          <h2 class="h5 mb-1">Utenti</h2>
          <p class="text-secondary mb-0">Crea e gestisci gli utenti del sistema.</p>
        </div>
        <div class="grid">
          <label class="field">
            <span>Username</span>
            <input id="adminUserName" class="form-control" type="text" placeholder="nome.cognome" />
          </label>
          <label class="field">
            <span>Password</span>
            <input id="adminUserPassword" class="form-control" type="password" placeholder="password temporanea" />
          </label>
          <label class="field">
            <span>Ruolo</span>
            <select id="adminUserRole" class="form-select">
              <option value="admin">Admin</option>
              <option value="creator" selected>Creatore</option>
              <option value="evaluator">Valutatore</option>
            </select>
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" id="adminCreateUser" type="button">Crea utente</button>
          <button class="btn btn-outline-primary is-hidden" id="adminUpdateUser" type="button">
            Aggiorna utente
          </button>
          <button class="btn btn-outline-secondary is-hidden" id="adminCancelUser" type="button">
            Annulla
          </button>
          <div class="text-secondary small" id="adminUserStatus"></div>
        </div>
        <div id="adminUserList" class="list-panel"></div>
      </section>

      <div class="empty-state" id="adminEmptyState">
        <div class="empty-state-content">
          <strong>Seleziona una funzione amministrativa</strong>
          <div class="text-secondary">Usa i pulsanti in alto per gestire utenti, corsi, argomenti o immagini.</div>
        </div>
      </div>
    </main>

    <!-- <footer class="footer">
      <p>Gestione catalogo domande, corsi e argomenti.</p>
    </footer> -->

    <div class="modal-backdrop is-hidden" id="imagePreviewBackdrop"></div>
    <div class="modal-panel is-hidden" id="imagePreviewModal" role="dialog" aria-modal="true" aria-labelledby="imagePreviewTitle">
      <div class="modal-header">
        <h3 class="h5 mb-0" id="imagePreviewTitle">Anteprima immagine</h3>
        <button class="btn btn-outline-secondary btn-sm" type="button" id="imagePreviewClose">Chiudi</button>
      </div>
      <div class="modal-body">
        <div class="image-preview">
          <img id="imagePreviewImg" alt="" />
        </div>
        <div class="image-preview-meta" id="imagePreviewMeta"></div>
      </div>
    </div>

    <script defer src="admin.js?v=5"></script>
  </body>
