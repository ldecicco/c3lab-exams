<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <% if (csrfToken) { %><meta name="csrf-token" content="<%= csrfToken %>"><% } %>
    <base href="<%= basePath %>/" />
    <title>Esame Completo - Fondamenti di Automatica</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <%- include('partials/nav', { active: 'esame-completo' }) %>
    <div class="bg-orbit"></div>
    <div class="bg-grid"></div>

    <div class="empty-state is-hidden" id="courseEmptyState">
      <div class="empty-state-content">
        <strong>Seleziona un corso per iniziare</strong>
        <a class="btn btn-primary" href="home">
          <i class="fa-solid fa-graduation-cap"></i>
          Vai ai corsi
        </a>
      </div>
    </div>

    <main class="layout container-fluid admin-layout py-4" id="mainLayout">
      <div class="builder-topbar grading-topbar">
        <div class="builder-topbar-left">
          <button class="btn btn-outline-secondary" id="multiModuleSelectBtn" type="button">
            <i class="fa-solid fa-link"></i>
            Seleziona esame completo
          </button>
        </div>
        <div class="builder-topbar-right">
          <span class="toolbar-status" id="multiModuleStatus">Nessun esame completo</span>
          <button class="btn btn-outline-primary" id="multiModuleExportCsv" type="button">
            <i class="fa-solid fa-file-csv"></i>
            Esporta CSV
          </button>
        </div>
      </div>

      <div class="empty-state" id="multiModuleEmptyState">
        <div class="empty-state-content">
          <strong>Seleziona un esame completo per iniziare</strong>
          <button class="btn btn-primary" type="button" id="multiModuleSelectBtnEmpty">
            <i class="fa-solid fa-link"></i>
            Seleziona esame completo
          </button>
        </div>
      </div>

      <section class="card shadow-sm is-hidden" id="multiModuleSummary">
        <div class="card-header">
          <div class="card-header-row">
            <div>
              <h2 class="h5 mb-1" id="multiModuleTitle">Esame completo</h2>
              <p class="text-secondary mb-0" id="multiModuleMeta">
                Seleziona un esame per visualizzare i risultati aggregati.
              </p>
            </div>
          </div>
        </div>
        <div class="chip-row" id="multiModuleRuleBadges"></div>
      </section>

      <section class="card shadow-sm is-hidden" id="multiModuleResultsSection">
        <div class="card-header">
          <div class="card-header-row">
            <div>
              <h2 class="h5 mb-1">Risultati finali</h2>
              <p class="text-secondary mb-0">Media pesata e stato finale per studente.</p>
            </div>
            <div class="header-actions">
              <span class="toolbar-status" id="multiModuleCount">0 studenti</span>
            </div>
          </div>
        </div>
        <div class="actions">
          <div class="chip-action active" data-filter="all">Tutti</div>
          <div class="chip-action" data-filter="passed">Solo superati</div>
          <div class="chip-action" data-filter="incomplete">Solo incompleti</div>
          <div class="chip-action" data-filter="not_passed">Solo non superati</div>
        </div>
        <div class="actions">
          <label class="field inline-field">
            <span class="field-label" id="module1FilterLabel">Modulo 1</span>
            <select class="form-select" id="module1ExamFilter">
              <option value="">Tutti gli esami</option>
            </select>
          </label>
          <label class="field inline-field">
            <span class="field-label" id="module2FilterLabel">Modulo 2</span>
            <select class="form-select" id="module2ExamFilter">
              <option value="">Tutti gli esami</option>
            </select>
          </label>
        </div>
        <div class="table-wrap">
          <table class="table table-striped align-middle">
            <thead>
              <tr>
                <th>Matricola</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th id="module1Header">Modulo 1</th>
                <th id="module2Header">Modulo 2</th>
                <th>Finale</th>
                <th>Esito</th>
                <th>Override</th>
              </tr>
            </thead>
            <tbody id="multiModuleResultsBody"></tbody>
          </table>
        </div>
      </section>
    </main>

    <div class="modal-backdrop is-hidden" id="multiModuleModalBackdrop"></div>
    <div class="modal-panel is-hidden" id="multiModuleModal" role="dialog" aria-modal="true">
      <div class="modal-header">
        <h3 class="h5 mb-0">Seleziona esame completo</h3>
        <button class="btn btn-outline-secondary btn-sm" type="button" id="multiModuleModalClose">
          Chiudi
        </button>
      </div>
      <div class="modal-body">
        <div id="multiModuleList" class="list-panel"></div>
      </div>
    </div>

    <div class="modal-backdrop is-hidden" id="multiModuleOverrideBackdrop"></div>
    <div class="modal-panel is-hidden" id="multiModuleOverrideModal" role="dialog" aria-modal="true">
      <div class="modal-header">
        <h3 class="h5 mb-0">Seleziona tentativo</h3>
        <button class="btn btn-outline-secondary btn-sm" type="button" id="multiModuleOverrideClose">
          Chiudi
        </button>
      </div>
      <div class="modal-body">
        <div class="grid">
          <label class="field">
            <span id="overrideModule1Label">Modulo 1</span>
            <select id="overrideModule1Select" class="form-select"></select>
          </label>
          <label class="field">
            <span id="overrideModule2Label">Modulo 2</span>
            <select id="overrideModule2Select" class="form-select"></select>
          </label>
        </div>
        <div class="actions">
          <button class="btn btn-outline-primary" type="button" id="multiModuleOverrideSave">Salva override</button>
          <button class="btn btn-outline-secondary" type="button" id="multiModuleOverrideClear">Reset</button>
        </div>
        <div class="text-secondary small" id="multiModuleOverrideStatus"></div>
      </div>
    </div>

    <script defer src="utils/format.js?v=1"></script>
    <script defer src="esame-completo.js?v=1"></script>
  </body>
</html>
